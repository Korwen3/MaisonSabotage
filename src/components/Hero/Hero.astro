---
import backgroundImg from "../../assets/images/hero.jpg";
const backgroundImgUrl = `url(${backgroundImg.src})`;
---

<section>
    <h2>Sublime - Macabre - Merveilleux</h2>
</section>

<style define:vars={{ backgroundImgUrl }}>
    section {
        position: relative;
        overflow: hidden;
        height: 100svh;

        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: 1fr;

        background: rgb(0,0,0,0);
        background: linear-gradient(0deg, rgba(0,0,0,1) 0%, rgba(var(--color-token-400),0.2) 50%, rgba(0,0,0,1) 100%);

        &::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: var(--backgroundImgUrl);
            background-size: cover;
            background-attachment: fixed;
            mix-blend-mode: soft-light;
            z-index: 0;
        }

        h2 {
            justify-self: flex-end;
            align-self: flex-end;
            padding: 3rem;

            font-family: "Yataghan", sans-serif;
            color: var(--primary-300);
            font-size: 2.3rem;
            line-height: 4rem;
        }
    }
</style>
