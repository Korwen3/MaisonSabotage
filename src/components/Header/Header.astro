---
import { Image } from "astro:assets";
import logo from "../../assets/images/logo.svg";
import Nav from "../Nav/Nav.astro";
---

<header>
    <Image
        src={logo}
        alt="Maison Sabotage"
        height={logo.height}
        width={logo.width}
    />
    <h1>Maison Sabotage</h1>
    <Nav />
</header>

<style>
    header {
        position: fixed;
        z-index: 10;

        width: inherit;
        max-height: 12rem;

        display: grid;
        grid-template-columns: auto 1fr 200px;
        align-items: center;

        padding: 1rem 3rem;

        h1 {
            justify-self: center;
            width: fit-content;
            font-size: 100px;
            color: var(--primary-200);

            -webkit-animation: flash ease-in 5s infinite;
            -moz-animation: flash ease-in 5s infinite;
            animation: flash ease-in 5s infinite;
            animation-delay: 3s;
        }

        img {
            margin-right: -2rem;
            height: 12rem;
            width: fit-content;
            object-fit: contain;
        }
    }

    @keyframes flash {
        from {
            opacity: 1;
        }
        10% {
            opacity: 1;
        }
        11% {
            opacity: 0;
        }
        12% {
            opacity: 1;
        }
        13% {
            opacity: 1;
        }
        15% {
            opacity: 0.2;
        }
        17% {
            opacity: 1;
        }
        to {
            opacity: 1;
        }
    }
</style>
